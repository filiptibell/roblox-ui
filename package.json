{
	"name": "rojo-explorer",
	"displayName": "Rojo Explorer",
	"description": "",
	"repository": "https://github.com/filiptibell/rojo-explorer",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.77.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": {
			"title": "Rojo Explorer",
			"properties": {
				"rojoExplorer.autogenerateSourcemap": {
					"type": "boolean",
					"default": true,
					"description": "Autogenerate sourcemap using the rojo project file\nTurn this setting off to watch a `sourcemap.json` file instead"
				},
				"rojoExplorer.includeNonScripts": {
					"type": "boolean",
					"default": false,
					"description": "Include instances that are not scripts in the explorer"
				},
				"rojoExplorer.showFilePaths": {
					"type": "boolean",
					"default": false,
					"description": "Show file paths next to instance names"
				},
				"rojoExplorer.rojoProjectFile": {
					"type": "string",
					"default": "default.project.json",
					"description": "Which project file to use for generating sourcemaps"
				}
			}
		},
		"commands": [
			{
				"command": "rojoExplorer.refresh",
				"title": "Refresh",
				"icon": "$(refresh)"
			},
			{
				"command": "rojoExplorer.instanceCut",
				"title": "Cut",
				"icon": "$(file)"
			},
			{
				"command": "rojoExplorer.instanceCopy",
				"title": "Copy",
				"icon": "$(files)"
			},
			{
				"command": "rojoExplorer.instancePaste",
				"title": "Paste",
				"icon": "$(file)"
			},
			{
				"command": "rojoExplorer.instancePasteInto",
				"title": "Paste Into",
				"icon": "$(file)"
			},
			{
				"command": "rojoExplorer.insertObject",
				"title": "Insert Object",
				"icon": "$(file-add)"
			},
			{
				"command": "rojoExplorer.renameObject",
				"title": "Rename...",
				"icon": "$(file-rename)"
			},
			{
				"command": "rojoExplorer.deleteObject",
				"title": "Delete",
				"icon": "$(file-remove)"
			},
			{
				"command": "rojoExplorer.openProjectRoot",
				"title": "Open Project File",
				"icon": "$(arrow-right)"
			}
		],
		"keybindings": [
			{
				"command": "rojoExplorer.instanceCut",
				"key": "ctrl+X",
				"mac": "cmd+X",
				"when": "(viewItem == scriptInstance || viewItem == folderInstance)"
			},
			{
				"command": "rojoExplorer.instanceCopy",
				"key": "ctrl+C",
				"mac": "cmd+C",
				"when": "(viewItem == scriptInstance || viewItem == folderInstance)"
			},
			{
				"command": "rojoExplorer.instancePaste",
				"key": "ctrl+V",
				"mac": "cmd+V",
				"when": "(viewItem == scriptInstance || viewItem == folderInstance)"
			},
			{
				"command": "rojoExplorer.instancePasteInto",
				"key": "shift+ctrl+V",
				"mac": "shift+cmd+V",
				"when": "(viewItem == scriptInstance || viewItem == folderInstance)"
			},
			{
				"command": "rojoExplorer.insertObject",
				"key": "shift+ctrl+I",
				"mac": "shift+cmd+I",
				"when": "(viewItem == scriptInstance || viewItem == folderInstance)"
			},
			{
				"command": "rojoExplorer.renameObject",
				"key": "F2",
				"mac": "enter",
				"when": "(viewItem == scriptInstance || viewItem == folderInstance)"
			},
			{
				"command": "rojoExplorer.deleteObject",
				"key": "backspace",
				"mac": "cmd+backspace",
				"when": "(viewItem == scriptInstance || viewItem == folderInstance)"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "rojoExplorer.refresh",
					"when": "view == rojoExplorer",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "rojoExplorer.instanceCut",
					"when": "view == rojoExplorer && (viewItem == scriptInstance || viewItem == folderInstance)",
					"group": "navigation@1"
				},
				{
					"command": "rojoExplorer.instanceCopy",
					"when": "view == rojoExplorer && (viewItem == scriptInstance || viewItem == folderInstance)",
					"group": "navigation@2"
				},
				{
					"command": "rojoExplorer.instancePaste",
					"when": "view == rojoExplorer && (viewItem == scriptInstance || viewItem == folderInstance)",
					"group": "navigation@3"
				},
				{
					"command": "rojoExplorer.instancePasteInto",
					"when": "view == rojoExplorer && (viewItem == scriptInstance || viewItem == folderInstance)",
					"group": "navigation@4"
				},
				{
					"command": "rojoExplorer.insertObject",
					"when": "view == rojoExplorer && (viewItem == scriptInstance || viewItem == folderInstance)",
					"group": "navigation_2@1"
				},
				{
					"command": "rojoExplorer.renameObject",
					"when": "view == rojoExplorer && (viewItem == scriptInstance || viewItem == folderInstance)",
					"group": "navigation_3@1"
				},
				{
					"command": "rojoExplorer.deleteObject",
					"when": "view == rojoExplorer && (viewItem == scriptInstance || viewItem == folderInstance)",
					"group": "navigation_3@2"
				},
				{
					"command": "rojoExplorer.insertObject",
					"when": "view == rojoExplorer && (viewItem == scriptInstance || viewItem == folderInstance)",
					"group": "inline@1"
				},
				{
					"command": "rojoExplorer.openProjectRoot",
					"when": "view == rojoExplorer && viewItem == projectRoot",
					"group": "inline@2"
				}
			]
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "rojo-explorer",
					"title": "Rojo Explorer",
					"icon": "$(remote-explorer)"
				}
			]
		},
		"views": {
			"rojo-explorer": [
				{
					"id": "rojoExplorer",
					"name": "Rojo Explorer",
					"visibility": "visible"
				}
			]
		},
		"viewsWelcome": [
			{
				"view": "rojoExplorer",
				"contents": "No workspace found"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"lint": "eslint src --ext ts"
	},
	"devDependencies": {
		"@types/glob": "^8.1.0",
		"@types/mocha": "^10.0.1",
		"@types/node": "16.x",
		"@types/vscode": "^1.77.0",
		"@typescript-eslint/eslint-plugin": "^5.56.0",
		"@typescript-eslint/parser": "^5.56.0",
		"@vscode/test-electron": "^2.3.0",
		"eslint": "^8.36.0",
		"glob": "^8.1.0",
		"mocha": "^10.2.0",
		"typescript": "^4.9.5"
	},
	"dependencies": {
		"adm-zip": "^0.5.10",
		"axios": "^1.3.6",
		"semver": "^7.5.0",
		"xml2js": "^0.5.0"
	}
}
