{
	"name": "rojo-viewer",
	"displayName": "Rojo Viewer",
	"description": "Explorer view similar to Roblox Studio for Rojo projects",
	"version": "0.0.5",
	"license": "MIT",
	"publisher": "filiptibell",
	"author": {
		"name": "Filip Tibell",
		"email": "filip.tibell@gmail.com",
		"url": "https://github.com/filiptibell/"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/filiptibell/rojo-viewer.git"
	},
	"engines": {
		"vscode": "^1.77.0"
	},
	"categories": [
		"Other",
		"Visualization"
	],
	"activationEvents": [],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": {
			"title": "Rojo Viewer",
			"properties": {
				"rojoViewer.autogenerateSourcemap": {
					"type": "boolean",
					"default": true,
					"description": "Autogenerate sourcemap using the rojo project file\nTurn this setting off to watch a `sourcemap.json` file instead"
				},
				"rojoViewer.includeNonScripts": {
					"type": "boolean",
					"default": false,
					"description": "Include instances that are not scripts in the explorer"
				},
				"rojoViewer.showClassNames": {
					"type": "boolean",
					"default": false,
					"description": "Show class names next to instances"
				},
				"rojoViewer.showFilePaths": {
					"type": "boolean",
					"default": false,
					"description": "Show file paths next to instances"
				},
				"rojoViewer.rojoProjectFile": {
					"type": "string",
					"default": "default.project.json",
					"description": "Which project file to use for generating sourcemaps"
				}
			}
		},
		"commands": [
			{
				"command": "rojoViewer.refresh",
				"title": "Refresh",
				"icon": "$(refresh)"
			},
			{
				"command": "rojoViewer.instanceCut",
				"title": "Cut",
				"icon": "$(file)"
			},
			{
				"command": "rojoViewer.instanceCopy",
				"title": "Copy",
				"icon": "$(files)"
			},
			{
				"command": "rojoViewer.instancePaste",
				"title": "Paste",
				"icon": "$(file)"
			},
			{
				"command": "rojoViewer.instancePasteInto",
				"title": "Paste Into",
				"icon": "$(file)"
			},
			{
				"command": "rojoViewer.insertObject",
				"title": "Insert Object",
				"icon": "$(file-add)"
			},
			{
				"command": "rojoViewer.insertService",
				"title": "Insert Service",
				"icon": "$(file-add)"
			},
			{
				"command": "rojoViewer.renameObject",
				"title": "Rename...",
				"icon": "$(file-rename)"
			},
			{
				"command": "rojoViewer.deleteObject",
				"title": "Delete",
				"icon": "$(file-remove)"
			},
			{
				"command": "rojoViewer.openFile",
				"title": "Open Project File",
				"icon": "$(arrow-right)"
			}
		],
		"keybindings": [
			{
				"command": "rojoViewer.instanceCut",
				"key": "ctrl+X",
				"mac": "cmd+X",
				"when": "viewItem =~ /canMove/"
			},
			{
				"command": "rojoViewer.instanceCopy",
				"key": "ctrl+C",
				"mac": "cmd+C",
				"when": "viewItem =~ /canMove/"
			},
			{
				"command": "rojoViewer.instancePaste",
				"key": "ctrl+V",
				"mac": "cmd+V",
				"when": "viewItem =~ /canPasteSibling/"
			},
			{
				"command": "rojoViewer.instancePasteInto",
				"key": "shift+ctrl+V",
				"mac": "shift+cmd+V",
				"when": "viewItem =~ /canPasteInto/"
			},
			{
				"command": "rojoViewer.insertObject",
				"key": "shift+ctrl+I",
				"mac": "shift+cmd+I",
				"when": "viewItem =~ /canInsertObject/"
			},
			{
				"command": "rojoViewer.insertService",
				"key": "shift+ctrl+I",
				"mac": "shift+cmd+I",
				"when": "viewItem =~ /canInsertService/"
			},
			{
				"command": "rojoViewer.renameObject",
				"key": "F2",
				"mac": "enter",
				"when": "viewItem =~ /instance/"
			},
			{
				"command": "rojoViewer.deleteObject",
				"key": "backspace",
				"mac": "cmd+backspace",
				"when": "viewItem =~ /instance/"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "rojoViewer.refresh",
					"when": "view == rojoViewer.explorer",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "rojoViewer.instanceCut",
					"when": "view == rojoViewer.explorer && viewItem =~ /canMove/",
					"group": "navigation@1"
				},
				{
					"command": "rojoViewer.instanceCopy",
					"when": "view == rojoViewer.explorer && viewItem =~ /canMove/",
					"group": "navigation@2"
				},
				{
					"command": "rojoViewer.instancePaste",
					"when": "view == rojoViewer.explorer && viewItem =~ /canPasteSibling/",
					"group": "navigation@3"
				},
				{
					"command": "rojoViewer.instancePasteInto",
					"when": "view == rojoViewer.explorer && viewItem =~ /canPasteInto/",
					"group": "navigation@4"
				},
				{
					"command": "rojoViewer.insertObject",
					"when": "view == rojoViewer.explorer && viewItem =~ /canInsertObject/",
					"group": "navigation_2@1"
				},
				{
					"command": "rojoViewer.insertService",
					"when": "view == rojoViewer.explorer && viewItem =~ /canInsertService/",
					"group": "navigation_2@2"
				},
				{
					"command": "rojoViewer.openFile",
					"when": "view == rojoViewer.explorer && viewItem =~ /projectFile/",
					"group": "navigation_3@3"
				},
				{
					"command": "rojoViewer.renameObject",
					"when": "view == rojoViewer.explorer && viewItem =~ /instance/",
					"group": "navigation_4@1"
				},
				{
					"command": "rojoViewer.deleteObject",
					"when": "view == rojoViewer.explorer && viewItem =~ /instance/",
					"group": "navigation_4@2"
				},
				{
					"command": "rojoViewer.insertObject",
					"when": "view == rojoViewer.explorer && (viewItem =~ /instance/ && viewItem =~ /canInsertObject/)",
					"group": "inline@1"
				},
				{
					"command": "rojoViewer.insertService",
					"when": "view == rojoViewer.explorer && (viewItem =~ /projectFile/ && viewItem =~ /canInsertService/)",
					"group": "inline@2"
				}
			]
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "rojoViewer",
					"title": "Rojo Viewer",
					"icon": "$(remote-explorer)"
				}
			]
		},
		"views": {
			"rojoViewer": [
				{
					"id": "rojoViewer.explorer",
					"name": "Explorer",
					"visibility": "visible"
				}
			]
		},
		"viewsWelcome": [
			{
				"view": "rojoViewer.explorer",
				"contents": "In order to use the explorer, a Rojo project file must exist in the current directory.\nYou can set a custom Rojo project file path to use in the extension settings.\n[Extension Settings](command:workbench.action.openSettings?%5B%22rojoViewer%22%5D)"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"lint": "eslint src --ext ts"
	},
	"devDependencies": {
		"@types/glob": "^8.1.0",
		"@types/mocha": "^10.0.1",
		"@types/node": "16.x",
		"@types/vscode": "^1.77.0",
		"@typescript-eslint/eslint-plugin": "^5.56.0",
		"@typescript-eslint/parser": "^5.56.0",
		"@vscode/test-electron": "^2.3.0",
		"eslint": "^8.36.0",
		"glob": "^8.1.0",
		"mocha": "^10.2.0",
		"typescript": "^4.9.5"
	},
	"dependencies": {
		"adm-zip": "^0.5.10",
		"axios": "^1.3.6",
		"semver": "^7.5.0",
		"xml2js": "^0.5.0"
	}
}
