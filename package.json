{
	"name": "rojo-viewer",
	"displayName": "Rojo Viewer",
	"description": "Explorer view similar to Roblox Studio for Rojo projects",
	"version": "0.0.7",
	"license": "MIT",
	"publisher": "filiptibell",
	"author": {
		"name": "Filip Tibell",
		"email": "filip.tibell@gmail.com",
		"url": "https://github.com/filiptibell/"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/filiptibell/rojo-viewer.git"
	},
	"engines": {
		"vscode": "^1.77.0"
	},
	"categories": [
		"Other",
		"Visualization"
	],
	"activationEvents": [],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": {
			"title": "Rojo Viewer",
			"properties": {
				"rojoViewer.autogenerateSourcemap": {
					"type": "boolean",
					"default": true,
					"description": "Autogenerate sourcemap using the rojo project file\nTurn this setting off to watch a `sourcemap.json` file instead"
				},
				"rojoViewer.ignoreGlobs": {
					"type": "array",
					"default": [
						"**/_Index/**"
					],
					"description": "Glob patterns of file paths to hide from the explorer.\nEven if a file path is ignored by this setting it will be able to be opened by other means.\nBy default, this setting ignores the internal packages directory for Wally packages for performance reasons."
				},
				"rojoViewer.includeNonScripts": {
					"type": "boolean",
					"default": false,
					"description": "If instances that are not scripts should be included in the explorer.\nThis may have a large performance impact and as such is disabled by default."
				},
				"rojoViewer.showClassNames": {
					"type": "boolean",
					"default": false,
					"description": "Show class names next to instances in the explorer."
				},
				"rojoViewer.showFilePaths": {
					"type": "boolean",
					"default": false,
					"description": "Show file paths next to instances in the explorer."
				},
				"rojoViewer.rojoProjectFile": {
					"type": "string",
					"default": "default.project.json",
					"description": "Which project file to use for generating sourcemaps."
				}
			}
		},
		"commands": [
			{
				"command": "rojoViewer.refresh",
				"title": "Rojo Viewer: Refresh",
				"icon": "$(refresh)"
			},
			{
				"command": "rojoViewer.clearRobloxCache",
				"title": "Rojo Viewer: Clear Roblox Cache",
				"icon": "$(refresh)"
			},
			{
				"command": "rojoViewer.instanceCut",
				"title": "Cut",
				"icon": "$(file)",
				"enablement": "view == rojoViewer.explorer && viewItem =~ /canMove/"
			},
			{
				"command": "rojoViewer.instanceCopy",
				"title": "Copy",
				"icon": "$(files)",
				"enablement": "view == rojoViewer.explorer && viewItem =~ /canMove/"
			},
			{
				"command": "rojoViewer.instancePaste",
				"title": "Paste",
				"icon": "$(file)",
				"enablement": "view == rojoViewer.explorer && viewItem =~ /canPasteSibling/"
			},
			{
				"command": "rojoViewer.instancePasteInto",
				"title": "Paste Into",
				"icon": "$(file)",
				"enablement": "view == rojoViewer.explorer && viewItem =~ /canPasteInto/"
			},
			{
				"command": "rojoViewer.insertObject",
				"title": "Insert Object",
				"icon": "$(file-add)",
				"enablement": "view == rojoViewer.explorer && (viewItem =~ /instance/ && viewItem =~ /canInsertObject/)"
			},
			{
				"command": "rojoViewer.insertService",
				"title": "Insert Service",
				"icon": "$(file-add)",
				"enablement": "view == rojoViewer.explorer && (viewItem =~ /projectFile/ && viewItem =~ /canInsertService/)"
			},
			{
				"command": "rojoViewer.renameObject",
				"title": "Rename...",
				"icon": "$(file-rename)",
				"enablement": "view == rojoViewer.explorer && viewItem =~ /instance/"
			},
			{
				"command": "rojoViewer.deleteObject",
				"title": "Delete",
				"icon": "$(file-remove)",
				"enablement": "view == rojoViewer.explorer && viewItem =~ /instance/"
			},
			{
				"command": "rojoViewer.openProjectFile",
				"title": "Open Project File",
				"icon": "$(arrow-right)",
				"enablement": "view == rojoViewer.explorer && viewItem =~ /projectFile/"
			}
		],
		"keybindings": [
			{
				"command": "rojoViewer.instanceCut",
				"key": "ctrl+X",
				"mac": "cmd+X"
			},
			{
				"command": "rojoViewer.instanceCopy",
				"key": "ctrl+C",
				"mac": "cmd+C"
			},
			{
				"command": "rojoViewer.instancePaste",
				"key": "ctrl+V",
				"mac": "cmd+V"
			},
			{
				"command": "rojoViewer.instancePasteInto",
				"key": "shift+ctrl+V",
				"mac": "shift+cmd+V"
			},
			{
				"command": "rojoViewer.insertObject",
				"key": "shift+ctrl+I",
				"mac": "shift+cmd+I"
			},
			{
				"command": "rojoViewer.insertService",
				"key": "shift+ctrl+I",
				"mac": "shift+cmd+I"
			},
			{
				"command": "rojoViewer.renameObject",
				"key": "F2",
				"mac": "enter"
			},
			{
				"command": "rojoViewer.deleteObject",
				"key": "backspace",
				"mac": "cmd+backspace"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "rojoViewer.refresh",
					"when": "view == rojoViewer.explorer",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "rojoViewer.instanceCut",
					"group": "navigation@1"
				},
				{
					"command": "rojoViewer.instanceCopy",
					"group": "navigation@2"
				},
				{
					"command": "rojoViewer.instancePaste",
					"group": "navigation@3"
				},
				{
					"command": "rojoViewer.instancePasteInto",
					"group": "navigation@4"
				},
				{
					"command": "rojoViewer.insertObject",
					"when": "view == rojoViewer.explorer && viewItem =~ /instance/",
					"group": "navigation_2@1"
				},
				{
					"command": "rojoViewer.insertService",
					"when": "view == rojoViewer.explorer && viewItem =~ /projectFile/",
					"group": "navigation_2@2"
				},
				{
					"command": "rojoViewer.openProjectFile",
					"when": "view == rojoViewer.explorer && viewItem =~ /projectFile/",
					"group": "navigation_3@3"
				},
				{
					"command": "rojoViewer.renameObject",
					"group": "navigation_4@1"
				},
				{
					"command": "rojoViewer.deleteObject",
					"group": "navigation_4@2"
				},
				{
					"command": "rojoViewer.insertObject",
					"when": "view == rojoViewer.explorer && viewItem =~ /instance/",
					"group": "inline@1"
				},
				{
					"command": "rojoViewer.insertService",
					"when": "view == rojoViewer.explorer && viewItem =~ /projectFile/",
					"group": "inline@2"
				}
			]
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "rojoViewer",
					"title": "Rojo Viewer",
					"icon": "$(remote-explorer)"
				}
			]
		},
		"views": {
			"rojoViewer": [
				{
					"id": "rojoViewer.explorer",
					"name": "Explorer",
					"visibility": "visible"
				}
			]
		},
		"viewsWelcome": [
			{
				"view": "rojoViewer.explorer",
				"contents": "In order to use the explorer, a Rojo project file must exist in the current directory.\nYou can set a custom Rojo project file path to use in the extension settings.\n[Extension Settings](command:workbench.action.openSettings?%5B%22rojoViewer%22%5D)"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"lint": "eslint src --ext ts"
	},
	"devDependencies": {
		"@types/glob": "^8.1.0",
		"@types/mocha": "^10.0.1",
		"@types/node": "16.x",
		"@types/vscode": "^1.77.0",
		"@typescript-eslint/eslint-plugin": "^5.56.0",
		"@typescript-eslint/parser": "^5.56.0",
		"@vscode/test-electron": "^2.3.0",
		"eslint": "^8.36.0",
		"glob": "^8.1.0",
		"mocha": "^10.2.0",
		"typescript": "^4.9.5"
	},
	"dependencies": {
		"adm-zip": "^0.5.10",
		"anymatch": "^3.1.3",
		"axios": "^1.3.6",
		"semver": "^7.5.0",
		"xml2js": "^0.5.0"
	}
}
